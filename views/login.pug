extends layout 

block content 
    form.container(style="flex-direction: column; gap:20px;"  method="POST", action="/login")
        if errorMessage
        label(style="color: red") #{errorMessage}
        br
        label(for="email") Email:
        input.inpTxt(type="email" id="email" name="email" required)
        label(for="password") Password:
        input.inpTxt(type="password" id="password" name="password" required)
        button.btn(style="height:5vh; width:10vw;" type="submit") Login