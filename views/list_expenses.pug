extends layout

block content

    table.noteList
        th="Remove"
        th="Edit"
        th="Amount"
        th="Name"
        th="Type"
        th="Category"
        th="Date"
        tr  
        each expense in expense_list
            td
                a(href=`/expenses/delete/${expense._id}`)="Remove"
            td
                a(href=`/expenses/edit/${expense._id}`)="Edit"
            td=`\$${expense.amount}`
            td=expense.name 
            td=expense.type
            td=expense.category
            td=expense.date.toLocaleString("en-US")
            tr
