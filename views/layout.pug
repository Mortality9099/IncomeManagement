doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    if current_user 
      div(style="width:25%")
        h2(style="text-align:left; align-content:left; width:100%;")=`${current_user.username}'s Expense List`
        h2(style="text-align:left; align-content:left; width:100%;")="Total Balance: "
          if current_user.total_balance > 0.0
            span(style="color: #24aa42")=`+$${current_user.total_balance.toFixed(2)}`
          else if current_user.total_balance < 0.0 
            span(style="color: #aa5545")=`$${current_user.total_balance.toFixed(2)}`
          else 
            span(style="color: whitesmoke")=`$${current_user.total_balance.toFixed(2)}`

    block content
