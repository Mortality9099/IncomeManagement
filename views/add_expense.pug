extends layout

block content
    
    form.container(style="flex-direction: column; gap:20px;" action=`/expense/add/`, method='POST')
        h3="Name:"
        input.inpTxt(type="text" name="name" required)
        h3="Date:"
        input(type="date" name="date" required)
        h3="Amount:"
        span(style="display:flex; gap:10px")
            label(for="amount")="$"
            input.inpTxt(style="width:3vw" type="number" name="amount" min="0" value="0" step=".01")
        h3="Type:"
        select(name="type")
            option(value="income")='Income'
            option(value="expenditure")='Expenditure'
        h3="Categroy:"
        input.inpTxt(type="text" name="category")

        input.btn(type="submit" value="Submit")